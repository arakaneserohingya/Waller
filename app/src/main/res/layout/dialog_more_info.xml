<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/cardClearBg"
    app:cardCornerRadius="@dimen/spacing_5"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/lyt_content"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_18">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_5"
            android:text="@string/details_category"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/textIconPrimary"
            app:fontFamily="@font/custom_font_medium" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/category_flex_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap"
            app:justifyContent="flex_start" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_10"
            android:padding="@dimen/spacing_5"
            android:text="@string/details_source"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/textIconPrimary"
            app:fontFamily="@font/custom_font_medium" />

        <TextView
            android:id="@+id/source_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:autoLink="web"
            android:padding="@dimen/spacing_5"
            android:text="Source link"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/primary" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
